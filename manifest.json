{
  "manifest_version": 2,
  "name": "Themekit Hot Reload",
  "version": "1.0",

  "description": "Adds hot reload to Shopify Theme Kit. Everytime a theme file is changed the browser window is automatically reloaded.",
  "homepage_url": "https://github.com/benfaerber/theme-kit-hot-reload",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["hotreload.js"]
    }
  ],

  "permissions": ["activeTab", "webRequest"],

  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Themekit Hot Reload",
    "default_popup": "popup/menu.html"
  }
}
